<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            app:cardCornerRadius="4dp" android:layout_marginBottom="5dp" android:focusable="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/test_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewTitle" android:textSize="25sp"
                    android:textStyle="bold" android:gravity="center_horizontal"/>
            <TextView
                    android:text="@string/jee_paper_2019"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewdesc" android:textSize="20sp"
                    android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
